<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="telesur.forums">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">

        <link rel="stylesheet" type="text/css" media="screen" href=""
              tal:attributes="href string:${context/absolute_url}/++resource++telesur.forums/styles.css" />

        <img tal:replace="structure view/w/banner/render" tal:condition="context/banner"/>

        <h1 class="documentFirstHeading" tal:condition="not:context/banner"
                                         tal:content="context/title" />

        <div class="questions-and-answer-section row">
            <div class="session-left-column cell width-3 position-0">
                <div tal:replace="structure view/w/guest_photo/render" />
                <div tal:replace="structure view/w/guest_name/render" />
                <div tal:replace="structure view/w/guest_description/render" />

                <a href="#" tal:attributes="href string:${context/absolute_url}/++add++telesur.forums.question"
                            tal:condition="view/can_add_question"
                            i18n:translate="">Add question</a>
            </div>

            <div class="session-right-column cell width-14 position-4">
                <tal:question repeat="brain view/get_published_questions">
                <div tal:define="question brain/getObject" class="row">
                    <div class="name-and-country cell width-3 position-0">
                        <a href="#" tal:attributes="href question/absolute_url"
                                    tal:condition="view/can_edit">
                                    Edit
                                    </a>
                        <span  i18n:translate="">Name:</span>
                        <span tal:content="question/name" />
                        <p class="country"
                                tal:content="question/country" />
                    </div>
                    <div class="question cell width-14 position-3">
                        <p tal:content="question/question" />
                    </div>
                    <div class="answer row">
                      <div class="cell width-16 position-0">
                        <p tal:content="question/answer" />
                      </div>
                    </div>
                </div>
                </tal:question>
            </div>
        </div>

        <div class="session-bottom-column"
             tal:condition="view/can_edit">
            <h2 i18n:translate="">Questions pending review</h2>
            <tal:question repeat="brain view/get_pending_questions">
              <tal:block define="question brain/getObject">
              <a href="#" tal:attributes="href question/absolute_url">
                <span class="fullname"
                      tal:content="question/name" />
                <span class="country"
                      tal:content="question/country" />
                <span class="question"
                      tal:content="question/question" />
                <span class="answer"
                      tal:content="question/answer" />
              </a>
              </tal:block>
            </tal:question>

            <h2 i18n:translate="">Questions rejected</h2>
            <tal:question repeat="brain view/get_rejected_questions">
              <tal:block define="question brain/getObject">
                <a href="#" tal:attributes="href question/absolute_url">
                <span class="fullname"
                      tal:content="question/name" />
                <span class="country"
                      tal:content="question/country" />
                <span class="question"
                      tal:content="question/question" />
                <span class="answer"
                      tal:content="question/answer" />
                </a>
              </tal:block>
            </tal:question>
        </div>

    </tal:main-macro>
</metal:main>

</body>
</html>
